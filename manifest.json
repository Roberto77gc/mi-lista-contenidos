{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Mi Lista de Contenidos",
  "short_name": "MisContenidos",
  "description": "Organiza tus películas, series y documentales vistos",
  "start_url": "./?source=pwa",
  "scope": "./",
  "display": "standalone",
  "display_override": ["standalone", "browser"],
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#3498db",
  "categories": ["entertainment", "productivity", "books"],
  "lang": "es-ES",
  "dir": "ltr",
  "icons": [
    { "src": "./icon-48.png", "sizes": "48x48", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-72.png", "sizes": "72x72", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-96.png", "sizes": "96x96", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-128.png", "sizes": "128x128", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-192.png", "sizes": "192x192", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-256.png", "sizes": "256x256", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-384.png", "sizes": "384x384", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-512.png", "sizes": "512x512", "type": "image/png", "purpose": "any maskable" },
    { "src": "./icon-1024.png", "sizes": "1024x1024", "type": "image/png", "purpose": "any maskable" }
  ],
  "screenshots": [
    {
      "src": "./screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Pantalla principal de la aplicación",
      "platform": "wide",
      "form_factor": "wide"
    },
    {
      "src": "./screenshot-2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "label": "Vista móvil",
      "platform": "narrow",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "Añadir nuevo",
      "short_name": "Nuevo",
      "description": "Añadir nuevo contenido",
      "url": "./?new=true",
      "icons": [{ "src": "./icon-add.png", "sizes": "96x96" }]
    },
    {
      "name": "Mis favoritos",
      "short_name": "Favoritos",
      "description": "Ver contenido favorito",
      "url": "./?filter=favorites",
      "icons": [{ "src": "./icon-fav.png", "sizes": "96x96" }]
    }
  ],
  "file_handlers": [
    {
      "action": "./import",
      "accept": {
        "application/json": [".json"]
      },
      "icons": [{ "src": "./icon-import.png", "sizes": "96x96" }],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".pdf", "text/plain"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+miscontenidos",
      "url": "./?url=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "permissions": [
    "clipboard-write",
    "fileSystem"
  ],
  "capture_links": "new-client",
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app",
      "id": "com.example.app"
    }
  ]
}
