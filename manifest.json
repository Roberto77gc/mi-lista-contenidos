{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Seenly – Tu historial visual",
  "short_name": "Seenly",
  "description": "Organiza tus películas, series y documentales vistos. Tu historial visual, siempre contigo.",
  "id": "/mi-lista-contenidos",
  "start_url": "/mi-lista-contenidos/?source=pwa",
  "scope": "/mi-lista-contenidos/",
  "scope_extensions": [{"origin": "https://tudominio.com"}],
  "display": "standalone",
  "display_override": ["standalone", "browser"],
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#3498db",
  "categories": ["entertainment", "productivity", "movies"],
  "lang": "es-ES",
  "dir": "ltr",
  "iarc_rating_id": "ES-1234-1234-1234",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "screenshots": [
    {
      "src": "/mi-lista-contenidos/screenshots/screenshot1.webp",
      "sizes": "1280x720",
      "type": "image/webp",
      "form_factor": "wide",
      "label": "Vista principal en desktop"
    },
    {
      "src": "/mi-lista-contenidos/screenshots/screenshot2.webp",
      "sizes": "750x1334",
      "type": "image/webp",
      "form_factor": "narrow",
      "label": "Vista móvil"
    }
  ],
  "icons": [
    {
      "src": "/mi-lista-contenidos/icons/icon-192-any.webp",
      "sizes": "192x192",
      "type": "image/webp",
      "purpose": "any"
    },
    {
      "src": "/mi-lista-contenidos/icons/icon-512-any.webp",
      "sizes": "512x512",
      "type": "image/webp",
      "purpose": "any"
    },
    {
      "src": "/mi-lista-contenidos/icons/icon-maskable.webp",
      "sizes": "192x192",
      "type": "image/webp",
      "purpose": "maskable"
    }
  ]
}